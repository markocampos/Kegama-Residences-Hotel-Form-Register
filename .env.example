# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=change_me_to_a_very_long_random_string

# Admin URL path (e.g., secret-admin/)
ADMIN_URL=admin/

# Management Dashboard URL prefix (e.g. mgmt/, secure-staff/)
MANAGEMENT_URL_PREFIX=mgmt

# Payslip Module URL path (e.g., payroll/, secret-slips/)
PAYSLIP_URL=payslip/

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Comma-separated list of hostnames/IPs
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,kegama.pythonanywhere.com

# Database Connection
# Leave these empty to use local SQLite (default)
DB_ENGINE=django.db.backends.mysql
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=your_db_host
DB_PORT=3306

# CSRF Trusted Origins (for https)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://kegama.pythonanywhere.com
